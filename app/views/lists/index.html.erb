<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/7991161/pexels-photo-7991161.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2);">
  <div class="container">
    <h1 class="text-center">Welcome to Le Wagon WATCHLIST</h1>
  </div>
</div>
<div class="container my-4">
  <h3>Here's all your lists</h3>
    <div class="cards mt-3">
      <% @lists.each do |list| %>
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.key? ? cl_image_path(list.photo.key) : image_path("cinema.jpg") %>')">
            <%= list.name %>
          </div>
          <% end %>
      <% end %>
    </div>
</div>
